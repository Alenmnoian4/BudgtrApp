                h4 {background-color: red}
            </style>
            <% } else { %>
            <style>
                h4 {background-color: blue;}
            </style>
            <% } %>
          <%=bankAccount %>
        </h3>
        <table>
            <% for(let i = 0; i < totalBudgtr.length; i++) { %>
            <tr>
                <td>
                <%=totalBudgtr[i].date %>
                </td>
                <td>
                    <a href="/budget/<%=i%>"><%=totalBudgtr[i].name %></a>
                </td>
                <td>
                    <%=totalBudgtr[i].amount %>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
